<Gerenciador>:
	Menu:
		name:'menu'
	Tarefas:
		name:'tarefas'
	Assistencia:
		name:'assistencia'

<Menu>:
	BoxLayout:
		
		orientation:'vertical'
		padding:250
		spacing:60
		
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
				source:'foto.png'
			
		Label:
			
		
		Botao:
			text:'Ver tarefas'
			on_release:app.root.current='tarefas'
			
		Botao:
			text:'Assistencia'
			on_release:app.root.current='assistencia'
			
		Botao:
			text:'Sair'
			on_release:root.confirma()

